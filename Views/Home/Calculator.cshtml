<form asp-controller="Home" asp-action="Result" method="post">
    <! --- 2 num input with the name of num1, num2 --->

    Num1: <input type="number" name="num1" />
    Num2: <input type="number" name="num2" />

    <! --- a submit button --->
    <input type="submit" />


    <! --- a set of radio buttons w/name of "operation" and the following vales: Plus, Minus, Multiply, divide, --->
